plugin.tx_rkwbasics {

    settings {
        criticalCss {
        
            # cat=plugin.tx_rkwbasics//a; type=boolean; label=Activate Rendering for Critical-CSS
            enable = 1

            filesForLayout {
            
                100 {
                    10 = EXT:rkw_basics/Tests/Integration/ContentProcessing/CriticalCssTest/Fixtures/Frontend/Files/Global/criticalOne.css
                    20 = EXT:rkw_basics/Tests/Integration/ContentProcessing/CriticalCssTest/Fixtures/Frontend/Files/Global/criticalTwo.css    
                }
            }
        }
	}
}

// needed because of BE-Mode with test
module.tx_rkwbasics < plugin.tx_rkwbasics


page {

    includeCSS {
        file10 = EXT:rkw_basics/Tests/Integration/ContentProcessing/CriticalCssTest/Fixtures/Frontend/Files/Global/all.css
        file10.media = all

        file20 = EXT:rkw_basics/Tests/Integration/ContentProcessing/CriticalCssTest/Fixtures/Frontend/Files/Global/print.css
        file20.media = print
        
        file30 = EXT:rkw_basics/Tests/Integration/ContentProcessing/CriticalCssTest/Fixtures/Frontend/Files/Global/screen.css
        file30.media = screen
        file30.forceOnTop = 1
    }    
}